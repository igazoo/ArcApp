<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h1 class="text-center text-white">プロフィール編集</h1>
        <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.label :name, '名前',class: 'text-white' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email, 'メールアドレス',class: 'text-white' %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label "画像をアップロード" %><br><%= f.file_field :image %>
        </div>

        <%= f.submit "変更する", class: 'btn-block btn-white' %>
        <% end %>

      </div>
    </div>
  </div>
</div>

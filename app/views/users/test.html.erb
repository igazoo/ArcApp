
<div class="user_wrapper">
  <div class="user_container">
    <div class="side_content">
      <div class="user_profile">

          <div class="user_profile_image">
            <img class= "current_user_image" src=<%= @user.image%>>
            <h3><%= @user.name %></h3>
          </div>

      </div>

      <div class="row">
        <div class="col-md-offset-2 col-md-3">
          <%=button_to "プロフィール編集",edit_user_path(current_user),:method =>:get,:class=>"profile_button" %>
        </div>
        <div class="col-md-2">
          <%=button_to " コレクション一覧",recommendations_path,:method =>:get,:class=>"collection_button"%>
       </div>

      <div class="col-md-3">
        <%=button_to "コレクションの登録",new_recommendation_path,:method => :get,:class=>"collection_index_button"%>
      </div>
    </div>
  </div>
</div>

<section class="stats">
      <%= render 'stats' %>
</section>

<%= render 'follow_form' if logged_in? %>

<div class="user_index_wrapper">
  <div class="index_title">
  <h1>All users</h1>
  <!--  検索拡張機能  -->
    <%= form_tag(users_path, :method => 'get' ) do %>
      <%= text_field_tag :search,'', class: 'search_form' %>
      <%= submit_tag 'Search', :name => nil,:class=>"search_btn" %>
    <% end %>
  <%= will_paginate @user, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>
  </div>
    <div class="index_content">
      <div class="users">
        <% @users.each do |user| %>
          <p>
            <img src=<%=user.image%>>
            <%= link_to user.name, user,:style=>'color:black' %>
          </p>
        <% end %>
    </div>
  </div>
</div>

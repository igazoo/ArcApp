
<header >
  <div class="container">
    <p>Arc+</p>
    <nav>
      <ul id = "access" class="nav navbar-nav navbar-right">
        <li><%= link_to "Home",  root_path %></li>
        <li><%= link_to "Vision",   homes_about_path %></li>
        <li><%= link_to "Event" , events_index_path %></li>
        <li><%= link_to "Sign_up",  new_user_path %></li>
        <li><%= link_to "Login", login_path %></li>
        <% if logged_in? %>
          <li><%= link_to "logout",logout_path, method: :delete %>
          </li>
          <li>
            <%= link_to user_path(current_user),	method: :get do %>
              <%= image_tag "profile.png" %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>

<div class="container">
  <div class="event-form-wrapper">
    <% if @event.errors.any? %>
      <% @event.errors.full_messages.each do |message| %>
       <div class="form-error">
        <%= message %>
       </div>
      <% end %>
    <% end %>
    <%= form_with model: @event ,local: true do |form| %>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, placeholder: "タイトル", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :location %>
        <%= form.text_field :location, placeholder: "会場", class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, placeholder: "詳細", class: "form-control" %>
      </div>
      <%= form.submit "イベント作成", class: "btn btn-info" %>
    <% end %>


  </div>
</div>

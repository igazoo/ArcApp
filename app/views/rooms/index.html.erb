<body class="index">
	<header >
		<div class="container">
			<p>Arc+</p>
			<nav>
				<ul id = "access" class="nav navbar-nav navbar-right">
					<li><%= link_to "Home",  root_path %></li>
					<li><%= link_to "Vision",   homes_about_path %></li>
					<li><%= link_to "Event" , events_index_path %></li>
					<li><%= link_to "Sign_up",  new_user_path %></li>
					<li><%= link_to "Login", login_path  %></li>
					<% if logged_in? %>

						<li><%= link_to "logout",logout_path, method: :delete %>
						</li>
						<li>
							<%= link_to	user_path(current_user) do %>
								<img src=<%= current_user.image %> class="current_user_image" >
								<p><%= current_user.name %></p>
								<%end%>
							</li>
					<% end %>
				</ul>

			</nav>
		</div>
	</header>
<% @rooms.each do |room| %>
<p><%=link_to room.name, room_path(room) %></p>
<% end %>

</body>

<!DOCTYPE html>
<html>
  <head>
    <title>Arc+.com</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all',
                               'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application',
                               'data-turbolinks-track': 'reload' %>
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
  </head>
  <body>
    <header >
      <div class="container">
        <p>Arc+</p>
        <nav>
          <ul id = "access" class="nav navbar-nav navbar-right">
            <li><%= link_to "Home",  root_path %></li>
            <li><%= link_to "about",   '#' %></li>
            <li><%= link_to "event" , '#' %></li>
            <li><%= link_to "sign_up",  new_user_path %></li>
            <li><%= link_to "Log in", '#' %></li>
          </ul>
        </nav>
      </div>
    </header>

      <%= yield %>

  </body>
</html>
